<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/title_bar" />



    <android.support.v4.view.ViewPager
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:id="@+id/main_viewpager"


        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:id="@+id/tabbarlayout"
        >




        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:id="@+id/menu1"
            >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/p1_main_tabbar_normal"

                android:id="@+id/menu1_main_tabbar"
                android:focusable="true"
                android:clickable="true"
                />


            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="@drawable/main_tabbar_mark1"
                android:layout_gravity="right"
                android:layout_marginTop="3dp"
                android:layout_marginRight="18dp"
                android:id="@+id/mark1_main_image_tabbar"

                />
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:id="@+id/menu2"
            >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/p1_main_tabbar_normal"
                android:id="@+id/menu2_main_tabbar"
                android:focusable="true"
                />
            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="@drawable/main_tabbar_mark1"
                android:layout_gravity="right"
                android:layout_marginTop="3dp"
                android:layout_marginRight="18dp"
                android:id="@+id/mark2_main_image_tabbar"

                />

        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:id="@+id/menu3"

            >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/p1_main_tabbar_normal"
                android:id="@+id/menu3_main_tabbar"
                android:focusable="true"
                />

            <TextView
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:text="12"
                android:textSize="12dp"
                android:background="@drawable/main_tabbar_mark2"
                android:textColor="@color/white"
                android:layout_gravity="right"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:id="@+id/mark3_main_text_tabbar"
                android:gravity="center_horizontal|center_vertical"
                />
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="58dp"
            android:layout_weight="1"
            android:id="@+id/menu4">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/p1_main_tabbar_normal"
                android:id="@+id/menu4_main_tabbar"
                android:focusable="true"
                />
            <TextView
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:text="12"
                android:textSize="12dp"
                android:background="@drawable/main_tabbar_mark2"
                android:textColor="@color/white"
                android:layout_gravity="right"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:id="@+id/mark4_main_text_tabbar"
                android:gravity="center_horizontal|center_vertical"
                />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>