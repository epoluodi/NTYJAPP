<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"



    >

    <ImageView
        android:layout_width="@dimen/optionmenu_image"
        android:layout_height="@dimen/optionmenu_image"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:id="@+id/menu_image"
        android:background="@drawable/icon_optionmenu1"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/optionmenu_list_height"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:text="菜单"
        android:textSize="14dp"
        android:singleLine="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/menu_image"
        android:id="@+id/menu_name"

        />




</RelativeLayout>
