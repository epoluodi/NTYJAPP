<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/singnaturepadbackup"
    android:id="@+id/linearLayout"
    >
    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:layout_weight="1"


        >

        <com.suypower.pms.view.plugin.word.signaturepad.views.SignaturePad
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"

            android:background="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/signpad"

            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="我接受本合同的所有条款"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:textSize="20dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        >
        <Button
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/btnreturn"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="返回"
            android:textColor="#666666"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="19sp"
            android:background="@drawable/button_style_2"/>
        <Button
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/btncanecl"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="清空"
            android:textColor="#666666"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="19sp"
            android:background="@drawable/button_style_2"/>
        <Button
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/btnok"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="确认"
            android:textColor="#FFFFFF"
            android:textSize="19sp"
            android:background="@drawable/button_style_0"/>
    </LinearLayout>


</LinearLayout>