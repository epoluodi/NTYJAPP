<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#EAEAEA"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/headview"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/bluebtn">

        <ImageView
            android:id="@+id/btnreturn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back_bar_left_selector" />

        <TextView
            android:id="@+id/chattitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="密码设置"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/btnok"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_ok_selector"
            android:clickable="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前登录密码"
            android:textColor="@color/blackTransparentA"
            />

        <EditText
            android:id="@+id/oldpwd"
            android:minHeight="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/editinputview"
            android:imeOptions="actionNone"
            android:inputType="textPassword"
            android:maxLines="1"
            android:lines="1"
            android:textAlignment="center"
            android:maxLength="6"
            android:layout_below="@+id/t1"
            />

    </RelativeLayout>
    <RelativeLayout
        android:padding="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码"
            android:textColor="@color/blackTransparentA"
            />
        <EditText
            android:id="@+id/newpwd1"
            android:minHeight="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/editinputview"
            android:imeOptions="actionNone"
            android:inputType="textPassword"
            android:maxLines="1"
            android:lines="1"
            android:textAlignment="center"
            android:maxLength="6"
            android:layout_below="@+id/t2"
            />


    </RelativeLayout>

    <RelativeLayout
        android:padding="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认新密码"
            android:textColor="@color/blackTransparentA"
            />
        <EditText
            android:id="@+id/newpwd2"
            android:minHeight="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/editinputview"
            android:imeOptions="actionNone"
            android:inputType="textPassword"
            android:maxLines="1"
            android:lines="1"
            android:textAlignment="center"
            android:maxLength="6"
            android:layout_below="@+id/t3"
            />


    </RelativeLayout>


</LinearLayout>