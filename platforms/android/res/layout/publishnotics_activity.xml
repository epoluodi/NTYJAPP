<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/headview"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/bluebtn">


        <Button
            android:id="@+id/btncancel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"

            android:background="@null"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="发布信息"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnsend"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editinputview2"
            android:focusable="true"
            android:gravity="start"
            android:imeOptions="actionDone"
            android:maxLength="100"
            android:paddingBottom="6dp"
            android:paddingLeft="55dp"
            android:paddingRight="15dp"
            android:paddingTop="6dp"
            android:singleLine="true"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="标题:"
            android:textColor="@color/blackTransparent8"
            android:textSize="16dp" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <EditText
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/editinputview2"
            android:focusable="true"
            android:gravity="start"
            android:imeOptions="actionDone"
            android:maxLength="800"
            android:paddingBottom="25dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <TextView
            android:id="@+id/charcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:text="0/800 字"
            android:textColor="@color/blackTransparent4" />

        <CheckBox
            android:textColor="@color/blackTransparentA"
            android:id="@+id/checkzd"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="start|bottom"
            android:text="是否置顶"
            android:textSize="14dp" />
    </FrameLayout>

    <HorizontalScrollView
        android:id="@+id/selectview"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@drawable/editinputview2"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>
    </HorizontalScrollView>

    <RelativeLayout
        android:id="@+id/menu_record"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/userinfo_menu_selector"
        android:clickable="true">


        <ImageView
            android:id="@+id/menu0"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/record" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/menu0"
            android:text="录音"
            android:textColor="@color/blackTransparentA"
            android:textSize="14dp" />


        <ImageView

            android:id="@+id/play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_play_selector" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/blackTransparent1" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/menu_sendtager"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/userinfo_menu_selector"
        android:clickable="true">


        <ImageView
            android:id="@+id/menu1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/sendmubiao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/menu1"
            android:text="发送目标"
            android:textColor="@color/blackTransparentA"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/sendtager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/mark"

            android:maxWidth="200dp"
            android:text="全部"
            android:textColor="#555555"
            android:textSize="14dp" />

        <ImageView

            android:id="@+id/mark"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/jiantou_icon" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/blackTransparent1" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menu_sp"
        android:layout_width="match_parent"
        android:layout_height="55dp"

        android:background="@drawable/userinfo_menu_selector"
        android:clickable="true">


        <ImageView
            android:id="@+id/menu2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shenpiren" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/menu2"
            android:text="审批领导"
            android:textColor="@color/blackTransparentA"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/peoples"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:layout_toLeftOf="@+id/mark1"
            android:text="2个人"
            android:textColor="#555555"
            android:textSize="14dp" />

        <ImageView

            android:id="@+id/mark1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/jiantou_icon" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/blackTransparent1" />
    </RelativeLayout>
</LinearLayout>