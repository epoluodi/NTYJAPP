<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA">
    <RelativeLayout
        android:id="@+id/headview"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/bluebtn">
        <Button
            android:id="@+id/btnreturn"
            android:layout_width="44dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@color/transparent"
            android:text="取消"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:clickable="true" />
        <TextView
            android:id="@+id/chattitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:text="选择联系人"
            android:textSize="20dp" />
        <Button
            android:layout_width="44dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:clickable="false"
            android:background="@color/transparent"
            android:text="确定"
            android:textSize="16dp"
            android:textColor="#A9B7B7"
            android:id="@+id/btnok" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/headview2"
        android:layout_width="match_parent"
        android:layout_below="@+id/headview"
        android:layout_height="34dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/btnsearch"
            android:layout_width="28dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bar_search_selector" />
        <ImageView
            android:id="@+id/btnmore"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/bar_more_selector" />
        <EditText
            android:id="@+id/searchtxt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/btnmore"
            android:imeOptions="actionSearch"
            android:background="@drawable/editinputview"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:inputType="text"
            android:maxLength="5"
            android:singleLine="true" />
    </RelativeLayout>
    <HorizontalScrollView
        android:id="@+id/selectview"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/headview2"
        android:background="@color/ghostwhite"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>
    <FrameLayout
        android:id="@+id/frameview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/selectview">
        <ListView
            android:id="@+id/listEx"
            style="@style/List"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <com.suypower.pms.view.CustomView.LinearViewPY
            android:id="@+id/listpy"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/phonebook_py_list"
            android:orientation="vertical"
            android:scrollbars="none">
        </com.suypower.pms.view.CustomView.LinearViewPY>
    </FrameLayout>
</RelativeLayout>