<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginbackcolor"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logoimg"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/logoimg"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_backshape"
        android:orientation="vertical"
        android:id="@+id/inputlayout">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/transparent"
            android:padding="10dp"

            android:textSize="16dp"
            android:id="@+id/txtuser"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/user_icon"
            android:imeOptions="actionNext"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/login_line2" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/transparent"
            android:padding="10dp"
            android:drawableLeft="@drawable/pwd_icon"
            android:textSize="16dp"
            android:id="@+id/txtpwd"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:maxLength="16"

            />
    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@+id/inputlayout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_style_0"
        android:text="登录"
        android:textColor="@color/white"
        android:id="@+id/btnlogin" />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:layout_height="20dp"
    android:gravity="center_horizontal|center_vertical"
    android:layout_marginBottom="5dp"
    android:id="@+id/infolayout"
    >
    <!--<ImageView-->
        <!--android:layout_width="15dp"-->
        <!--android:layout_height="15dp"-->
        <!--android:background="@drawable/logo"-->


        <!--/>-->
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="江苏苏源高科技有限公司"
        android:textSize="10dp"
        android:textColor="@color/blackTransparentA"
        />

</LinearLayout>

</RelativeLayout>