<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/bluebtn</item>
        <item name="android:colorPrimaryDark">@color/bluebtn</item>
        <item name="android:colorAccent">@color/bluebtn</item>
    </style>
    
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- 设置未浮动窗口 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无边框 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置完全透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 是否模糊 -->
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!-- 半透明 -->
    </style>    
    
    <!-- EditText样式一 -->
    <style name="etStyle1">
        <item name="android:drawablePadding">6dip</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">#999999</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#666666</item>
    </style>
    
    
    <!-- listview 样式 -->
    <style name="List" parent="android:Widget.ListView">
        <item name="android:scrollbars">none</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@color/darkgrey</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:choiceMode">singleChoice</item>
    </style>
    <style name="chatList" parent="android:Widget.ListView">
        <item name="android:scrollbars">none</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@color/transparent</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:choiceMode">singleChoice</item>
    </style>
    <style name="Listdetail" parent="android:Widget.ListView">
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@color/transparent</item>
        <item name="android:dividerHeight">0.0px</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:choiceMode">singleChoice</item>
    </style>


	<!-- optionmenu 动画 -->
    <style name="Animationpopwindows">
        <item name="android:windowEnterAnimation">@anim/anim_optionmenu</item>
        <item name="android:windowExitAnimation">@anim/anim_optionmenu_exit</item>
    </style>
    <style name="Animationsharepopwindows">
        <item name="android:windowEnterAnimation">@anim/anim_shareview_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_shareview_exit</item>
    </style>
    <style name="Animationbottomwindows">
        <item name="android:windowEnterAnimation">@anim/anim_bottommenu_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_bottommenu_exit</item>
    </style>
    <style name="AnimationMenu">
        <item name="android:windowEnterAnimation">@anim/anim_shareview_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_shareview_exit</item>
    </style>

    <style name="AnimActivityTheme">
        <item name="android:windowAnimationStyle">@style/FeelyouWindowAnimTheme</item>
    </style>
    <style name="FeelyouWindowAnimTheme" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:activityOpenExitAnimation">@anim/blank</item>
        <item name="android:activityCloseEnterAnimation">@anim/blank</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_bottom</item>
    </style>
</resources>
